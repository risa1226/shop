<%= render 'items/header' %>
<h2>注文確認</h2>
<h3>お届け先/お客様登録情報</h3>
<div class="user_info">
    <p>お名前：<%= @user.name %>様</p>
    <p>電話番号：<%= @user.phone %></p>
    <p>メールアドレス：<%= @user.email %></p>
    <p>郵便番号：<%= @user.postcode %></p>
    <p>住所：<%= @user.prefecture.name %><%= @user.city %><%= @user.other_address %></p>
    <%= link_to '変更する', '/users/edit' %>
</div>

<div class="total_price">
    <p>合計金額</p>
    <p>¥<%= @total_price.to_s(:delimited) %></p>
</div>

<% @orders.each do |order| %>
<div class="total_item">
    <p><%= @item_name %></p>
    <p><%= @item_second_name %></p>
    <p>¥<%= @item_price.to_s(:delimited) %></p>
    <p>×</p>
    <p><%= order.quantity %></p>
    <p>=</p>
    <p>¥<%= (order.item.price * order.quantity).to_s(:delimited) %></p>
</div>
<% end %>

<div class="total_postage">
    <p>送料</p>
    <p>¥<%= current_cart.carriage.price %></p>
    <p>×</p>
    <p><%= @total_quantity %></p>
    <p>=</p>
    <p>¥<%= @carriage_total.to_s(:delimited) %></p>
</div>

<%= button_to '注文確定', {controller: 'carts', action: 'complete'}, {method: :get} %>
<%= link_to 'カート画面に戻る', '/carts'%>
<%= render 'items/footer' %>